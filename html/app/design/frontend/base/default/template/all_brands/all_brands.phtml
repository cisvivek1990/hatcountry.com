function formatUrlKey($str)
{
    $str = cleanString($str);
    $str = Mage::helper('core')->removeAccents($str);
    $urlKey = strtolower($str);
    $urlKey = trim($urlKey, '-');

    return $urlKey;
}

function cleanString($text) {
    $replace = array(
        '/Â®/'   =>   'r',
        '#[^0-9a-z]+#i' => '-'
    );
    $res = preg_replace(array_keys($replace), array_values($replace), $text);
    return $res == null ? $text : $res;
}
