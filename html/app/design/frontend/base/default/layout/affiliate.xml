			</reference>
	   </reference>
    </checkout_cart_index>
    
    <!-- OnePage Chackout -->
	<checkout_onepage_index translate="label">
        <reference name="head">
			<reference name="affiliate_section_head" >
				 <action method="addIncludeon"><section>one_page_chackout</section></action>
			</reference>
	   </reference>
	   <reference name="after_body_start">
			<reference name="affiliate_section_bodybegin" >
