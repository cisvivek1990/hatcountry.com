			</reference>
	   </reference>
    </catalog_category_view>
    
    <!-- Cart Page -->
	<checkout_cart_index translate="label">
        <reference name="head">
			<reference name="affiliate_section_head" >
				 <action method="addIncludeon"><section>cart_page</section></action>
			</reference>
	   </reference>
	   <reference name="after_body_start">
			<reference name="affiliate_section_bodybegin" >
				 <action method="addIncludeon"><section>cart_page</section></action>
			</reference>
	   </reference>
	   <reference name="before_body_end">
			<reference name="affiliate_section_bodyend" >
