<?xml version="1.0"?>
<config>
    <modules>
        <HC_Layerednavigation>
            <version>1.0.0</version>
        </HC_Layerednavigation>
    </modules>
    <frontend>
        <routers>
            <catalog>
                <args>
                    <modules>
                        <HC_Layerednavigation before="Mage_Catalog">HC_Layerednavigation</HC_Layerednavigation>
                    </modules>
                </args>
            </catalog>
            <catalogsearch>
                <args>
                    <modules>
                        <HC_Layerednavigation before="Mage_CatalogSearch">HC_Layerednavigation</HC_Layerednavigation>
                    </modules>
                </args>
            </catalogsearch>
            <tag>
                <args>
                    <modules>
                        <HC_Layerednavigation before="Mage_Tag">HC_Layerednavigation</HC_Layerednavigation>
                    </modules>
                </args>
            </tag>
        </routers>
        <layout>
            <updates>
                <layerednavigation>
                    <file>layerednavigation.xml</file>
                </layerednavigation>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<menu>
			<HC translate="title" module="layerednavigation">
				<title>HC</title>
				<sort_order>71</sort_order>               
				<children>
					<layerednavigation translate="title" module="layerednavigation">
						<title>Layered Navigation</title>
						<sort_order>35</sort_order>
						<children>
							<configuration>
								<title>Configuration</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/layerednavigation</action>
							</configuration>
						</children>
					</layerednavigation>
				</children>
			</HC>
		</menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <layerednavigation>
                                            <title>Layered Navigation</title>
                                        </layerednavigation>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>   
    <global>
        <models>
            <layerednavigation>
                <class>HC_Layerednavigation_Model</class>
            </layerednavigation>
            <catalog>
                <rewrite>
                    <layer>HC_Layerednavigation_Model_Catalog_Layer</layer>
                </rewrite>
            </catalog>
			 <catalog>
                <rewrite>
                    <layer_filter_price>HC_Layerednavigation_Model_Catalog_Layer_Filter_Price</layer_filter_price>
                    <layer_filter_category>HC_Layerednavigation_Model_Catalog_Layer_Filter_Category</layer_filter_category>
                </rewrite>
            </catalog>
            <catalogsearch>
                <rewrite>
                    <layer>HC_Layerednavigation_Model_Catalogsearch_Layer</layer>
                </rewrite>
            </catalogsearch>
        </models>
        <blocks>
            <layerednavigation>
                <class>HC_Layerednavigation_Block</class>
            </layerednavigation>
        </blocks>
        <blocks>
            <catalog>
                <rewrite >
                    <layer_filter_price>HC_Layerednavigation_Block_Catalog_Layer_Filter_Price</layer_filter_price>
                    <layer_filter_decimal>HC_Layerednavigation_Block_Catalog_Layer_Filter_Decimal</layer_filter_decimal>
                    <layer_filter_category>HC_Layerednavigation_Block_Catalog_Layer_Filter_Category</layer_filter_category>

             </rewrite>
            </catalog>
            <catalogsearch>
                <rewrite >
                    <layer_filter_decimal>HC_Layerednavigation_Block_Catalogsearch_Layer_Filter_Decimal</layer_filter_decimal>
                </rewrite>
            </catalogsearch>
        </blocks>
        <helpers>
            <layerednavigation>
                <class>HC_Layerednavigation_Helper</class>
            </layerednavigation>
        </helpers>
    </global>
    <default>
        <layerednavigation>
            <layerfiler_config>
                <enabled>1</enabled>
                <toolbar_status>0</toolbar_status>
                <slider_status>1</slider_status>
                <tag_status>1</tag_status>
                <loading_image>default/loader.gif</loading_image>
                <trans_image>default/bg4.png</trans_image>
                <bg_opacity>0.7</bg_opacity>
            </layerfiler_config>
        </layerednavigation>
    </default>
</config>