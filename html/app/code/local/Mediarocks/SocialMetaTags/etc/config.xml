<config>
	<modules>
		<Mediarocks_SocialMetaTags>
			<version>0.2.4</version>
		</Mediarocks_SocialMetaTags>
	</modules>
	<global>
		<blocks>
			<mediarocks_socialmetatags>
				<class>Mediarocks_SocialMetaTags_Block</class>
			</mediarocks_socialmetatags>
			<adminhtml>
				<rewrite>
					<cms_page_edit_form>Mediarocks_SocialMetaTags_Block_Adminhtml_Cms_Page_Edit_Form</cms_page_edit_form>
				</rewrite>
			</adminhtml>
		</blocks>
		<models>
			<mediarocks_socialmetatags>
				<class>Mediarocks_SocialMetaTags_Model</class>
			</mediarocks_socialmetatags>
		</models>
		<helpers>
			<mediarocks_socialmetatags>
				<class>Mediarocks_SocialMetaTags_Helper</class>
			</mediarocks_socialmetatags>
		</helpers>
		<resources>
			<mediarocks_socialmetatags_setup>
				<setup>
					<module>Mediarocks_SocialMetaTags</module>
					<class>Mediarocks_SocialMetaTags_Model_Resource_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</mediarocks_socialmetatags_setup>
			<mediarocks_socialmetatags_write>
				<connection>
					<use>core_write</use>
				</connection>
			</mediarocks_socialmetatags_write>
			<mediarocks_socialmetatags_read>
				<connection>
					<use>core_read</use>
				</connection>
			</mediarocks_socialmetatags_read>
		</resources>
	</global>
	<frontend>
		<translate>
			<modules>
				<Mediarocks_SocialMetaTags>
					<files>
						<default>Mediarocks_SocialMetaTags.csv</default>
					</files>
				</Mediarocks_SocialMetaTags>
			</modules>
		</translate>
		<layout>
			<updates>
				<mediarocks_socialmetatags>
					<file>mediarocks_socialmetatags.xml</file>
				</mediarocks_socialmetatags>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
		<events>
			<cms_page_prepare_save>
				<observers>
					<mediarocks_socialmetatags_save_page>
						<type>singleton</type>
						<class>mediarocks_socialmetatags/observer</class>
						<method>savePage</method>
					</mediarocks_socialmetatags_save_page>
				</observers>
			</cms_page_prepare_save>
			<adminhtml_cms_page_edit_tab_meta_prepare_form>
				<observers>
					<mediarocks_socialmetatags_prepare_form>
						<type>singleton</type>
						<class>mediarocks_socialmetatags/observer</class>
						<method>prepareForm</method>
					</mediarocks_socialmetatags_prepare_form>
				</observers>
			</adminhtml_cms_page_edit_tab_meta_prepare_form>
      <cms_page_save_after>
        <observers>
          <mediarocks_socialmetatags_save_cms_page_after>
            <type>singleton</type>
            <class>mediarocks_socialmetatags/observer</class>
            <method>afterSaveCmsPage</method>
          </mediarocks_socialmetatags_save_cms_page_after>
        </observers>
      </cms_page_save_after>
      <catalog_category_save_commit_after>
        <observers>
          <mediarocks_socialmetatags_save_category_after>
            <type>singleton</type>
            <class>mediarocks_socialmetatags/observer</class>
            <method>afterSaveCategory</method>
          </mediarocks_socialmetatags_save_category_after>
        </observers>
      </catalog_category_save_commit_after>
      <catalog_product_save_commit_after>
        <observers>
          <mediarocks_socialmetatags_save_product_after>
            <type>singleton</type>
            <class>mediarocks_socialmetatags/observer</class>
            <method>afterSaveProduct</method>
          </mediarocks_socialmetatags_save_product_after>
        </observers>
      </catalog_product_save_commit_after>
		</events>
		<layout>
			<updates>
				<mediarocks_socialmetatags>
					<file>mediarocks_socialmetatags.xml</file>
				</mediarocks_socialmetatags>
			</updates>
		</layout>
	</adminhtml>
	<default>
		<socialmetatags>
			<general>
        <product_price_tax>1</product_price_tax>
        <product_price_weee>2</product_price_weee>
        <product_price_bundled>0</product_price_bundled>
				<product_img_fallback_order>base_image,small_image,thumbnail</product_img_fallback_order>
			</general>
			<facebook>
				<enabled>0</enabled>
        <auto_scrape>1</auto_scrape>
				<use_product_type>1</use_product_type>
			</facebook>
			<twitter>
				<enabled>0</enabled>
				<card_data_1_content>custom</card_data_1_content>
				<card_data_2_content>custom</card_data_2_content>
			</twitter>
		</socialmetatags>
	</default>
</config>
